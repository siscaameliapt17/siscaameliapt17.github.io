  </head>
  <body
    class="bg-gradient-to-r from-gray-50 to-teal-100 min-h-screen pb-16 font-sans"
  >
    <div class="container mx-auto my-16 max-w-4xl px-4">
      <!-- Header -->
      <div class="text-center mb-12">
        <h2
          class="text-4xl font-extrabold text-transparent bg-gradient-to-r from-green-600 to-teal-400 bg-clip-text"
        >
          <i class="bi bi-grid-3x3-gap-fill mr-2"></i>Tabel Perkalian 1–10
        </h2>
      </div>

      <!-- Table -->
      <div class="overflow-x-auto mb-12">
        <table
          class="min-w-full table-auto border-collapse border border-green-300 shadow-md rounded-lg"
        >
          <thead class="bg-red-600 text-white">
            <tr>
              <th class="px-6 py-4 text-center">x</th>
              <!-- Header for 1-10 -->
              <th class="px-6 py-4 text-center" colspan="10">
                <div class="grid grid-cols-10 gap-2" id="tableHeader"></div>
              </th>
            </tr>
          </thead>
          <tbody id="tableBody">
            <!-- Table body will be filled by JavaScript -->
          </tbody>
        </table>
      </div>

      <!-- Kalkulator -->
      <hr class="my-8 border-gray-300" />
      <div class="bg-white p-6 rounded-xl shadow-lg">
        <h4
          class="text-2xl font-semibold text-green-600 mb-4 flex items-center"
        >
          <i class="bi bi-calculator mr-2"></i>Kalkulator Perkalian
        </h4>
        <form id="kalkulatorForm">
          <div class="flex justify-between gap-4 mb-4">
            <input
              type="number"
              id="angka1"
              placeholder="Angka pertama"
              class="w-1/2 px-4 py-2 border border-gray-300 rounded-md"
              required
            />
            <span class="text-3xl font-bold">×</span>
            <input
              type="number"
              id="angka2"
              placeholder="Angka kedua"
              class="w-1/2 px-4 py-2 border border-gray-300 rounded-md"
              required
            />
          </div>
          <div class="text-center mt-4">
            <button
              type="submit"
              class="px-6 py-2 bg-green-600 text-white rounded-full hover:bg-green-700 transition duration-300"
            >
              <i class="bi bi-check-circle mr-2"></i> Hitung
            </button>
          </div>
        </form>
        <div
          id="hasil"
          class="text-center mt-6 font-semibold text-xl text-green-600"
        ></div>
      </div>

      <!-- Kembali Button -->
      <div class="text-center mt-8">
        <a
          href="Homework.html"
          class="inline-flex items-center gap-2 px-6 py-3 border border-green-600 text-green-600 rounded-lg hover:bg-green-600 hover:text-white transition"
        >
          <i class="bi bi-arrow-left-circle"></i> Kembali ke Homework
        </a>
      </div>
    </div>

    <script>
      // Generate multiplication table dynamically
      function generateTable() {
        const tableHeader = document.getElementById("tableHeader");
        const tableBody = document.getElementById("tableBody");

        // Create table header (1-10)
        for (let i = 1; i <= 10; i++) {
          const span = document.createElement("span");
          span.classList.add("text-center");
          span.textContent = i;
          tableHeader.appendChild(span);
        }

        // Create table rows (1-10)
        for (let i = 1; i <= 10; i++) {
          const row = document.createElement("tr");

          // First cell for the row header (1, 2, ..., 10)
          const th = document.createElement("th");
          th.classList.add("px-6", "py-4", "text-center");
          th.textContent = i;
          row.appendChild(th);

          // Create cells for multiplication results
          for (let j = 1; j <= 10; j++) {
            const td = document.createElement("td");
            td.classList.add("px-6", "py-4", "text-center");
            td.textContent = i * j;
            row.appendChild(td);
          }

          // Append the row to the table body
          tableBody.appendChild(row);
        }
      }

      // Call the function to generate the table when the page loads
      window.onload = generateTable;

      // Kalkulator logic
      document
        .getElementById("kalkulatorForm")
        .addEventListener("submit", function (e) {
          e.preventDefault();
          const a = parseFloat(document.getElementById("angka1").value);
          const b = parseFloat(document.getElementById("angka2").value);
          const hasil = a * b;
          document.getElementById(
            "hasil"
          ).textContent = `${a} × ${b} = ${hasil}`;
        });
    </script>
  </body>
</html>
